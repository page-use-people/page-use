{
    "name": "@page-use/mono",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "publish-client": "node --experimental-strip-types scripts/publish-client.mts",
        "publish-react": "node --experimental-strip-types scripts/publish-react.mts",
